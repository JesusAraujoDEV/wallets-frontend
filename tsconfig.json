{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    // --- AÑADE ESTAS DOS LÍNEAS ---
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // ----------------------------------

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  // --- AÑADE ESTE "include" ---
  "include": [
    "api"
  ]
  // ------------------------------
}